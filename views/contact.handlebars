<section class="main">
  <div class='row'>
    <div class="col-xs-12 pageTitle">
      <u><strong>Contact</strong></u>
    </div>
  </div>

  <form action="contact/message" method="POST">

  {{#if dynamicData.messageSent}}
    <div class='row'>
      <div class="col-xs-12 messageSent">
        Thank you for your message!
      </div>
    </div>
  {{/if}}

    <div class='row'>
      <div class="col-xs-2 formLabel">
        Name:
      </div>
      <div class="col-xs-8">
        <input class="formInput" type="text" id ="fname" name="fname"  placeholder="John Smith" required>
      </div>
    </div>

    <div class='row'>
      <div class="col-xs-2 formLabel">
        E-mail:
      </div>
      <div class="col-xs-8">
        <input class="formInput" type="text" id="email" name="email"  placeholder="example@gmail.com" required>
      </div>
    </div>
    <div class='row'>
      <div class="col-xs-2 formLabel">
        Message:
      </div>
      <div class="col-xs-10">
        <textarea class="formInput" id="message" name="message" required></textarea>
      </div>
    </div>
    
    <div class='row'>
      <div class="col-xs-2 formLabel">
      </div>
      <div class="col-xs-10">
        <button id="contactSubmit" type="submit">Submit</button>
      </div>
    </div>
  </form>
    
</section>